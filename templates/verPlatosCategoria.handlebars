<div class="topcoat-navigation-bar">
        <div class="topcoat-navigation-bar__item left half-quarter">
            <a class="topcoat-icon-button--quiet back-button" href="javascript:window.history.back();">
                <span class="topcoat-icon topcoat-icon--back"></span>
            </a>
        </div>
        <div class="topcoat-navigation-bar__item center less-half">
            {{#.}}
            <h1 class="topcoat-navigation-bar__title" id="categ">{{nomcateg}}</h1><span id="numcateg">{{cid}}</span>
            {{/.}}
        </div>
       <div class="topcoat-navigation-bar__item center third idiomas">
            <img id="1" src="img/es.png" alt=""/>
            <img id="2" src="img/ukp.png" alt=""/>
            <img id="3" src="img/fr.png" alt=""/>
            <img id="4" src="img/it.png" alt=""/>
        </div>
       <div class="topcoat-navigation-bar__item center half-quarter">
            <img class="logo" src="img/logo2.png"/>
        </div>
</div>
<div class="scroller">
    <div class="verplatos">
        <div class="platoG"> 
            {{#.}}
                <img class="platogrande" id="fotoplato" src="img/{{imagen}}"/>
                <span id="precioplato">{{precio}} €</span>
                <p id="textoplato">{{nomplato}}</p>
                {{#if alergenos}}
                    <p id="ale"><img id="alergenos" src="img/{{alergenos}}"/></p>
                {{/if}}
            {{/.}}

        </div>
        <div class="listaplatos">

            {{#.}}
              <div class="plato2">
                  <img class="platoP" src="img/{{imagen}}" alt="{{nomplato}}" />
                  <span class="precio3"> {{precio}} €</span>
                 {{#if alergenos}}
                    <img id="alerg" src="img/{{alergenos}}"/>
                 {{/if}}
                 <br/>
                <span class="nomplato2">{{nombre}}</span>
              </div>
            {{/.}}

        </div>
    </div>
    
    <footer>
     <h3>Copyright @Restaurante Antonio 2015</h3>
    </footer>
</div>